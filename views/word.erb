<h3>Word: <%= @word.name %></h3>
<a href="/words/<%= @word.id %>/edit">Edit word</a>

<h4>Your definitions: </h4>

<% if @word.definitions.any? %>
  <ul>
    <% @word.definitions.each do |definition| %>
      <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.define %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't added any definitions yet.</p>
<% end %>

<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="define_input">Definition:</label>
    <input id="define_input" name="define_input" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add definition</button>
</form>

<a href="/words">Return to your list of words</a>
